<UserControl x:Class="BFF.DataVirtualizingCollection.Sample.View.Views.Options.SlidingWindowOptionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:options="clr-namespace:BFF.DataVirtualizingCollection.Sample.ViewModel.ViewModels.Options;assembly=BFF.DataVirtualizingCollection.Sample.ViewModel"
             d:DataContext="{d:DesignInstance options:ISlidingWindowOptionsViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Orientation="Horizontal">
        <TextBlock Text="Window Size:" 
                   Margin="5"  />
        <TextBox Text="{Binding WindowSize}" 
                 MinWidth="50"
                 TextAlignment="Right"
                 Margin="5" />
        <TextBlock Text="Window Offset:" 
                   Margin="5"  />
        <TextBox Text="{Binding WindowOffset}" 
                 MinWidth="50"
                 TextAlignment="Right"
                 Margin="5" />
    </StackPanel>
</UserControl>
